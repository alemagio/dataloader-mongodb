{
  "name": "carretto",
  "description": "A dataloader implementation with adapters",
  "author": "Alessandro Magionami - @alemagio",
  "license": "MIT",
  "scripts": {
    "build": "pnpm turbo build --color",
    "test": "turbo run test",
    "preinstall": "npx only-allow pnpm",
    "release": "pnpm run build && changeset publish",
    "precommit": "pnpm install",
    "check-updates": "pnpm outdated --recursive",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepare": "husky",
    "unit": "turbo run unit"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.5.0",
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/lint": "^19.5.0",
    "@commitlint/prompt": "^19.5.0",
    "@ducktors/tsconfig": "^1.0.0",
    "@types/node": "^22.7.7",
    "c8": "^10.1.2",
    "commitlint-plugin-function-rules": "^4.0.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsx": "^4.19.1",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vitest-mongodb": "^0.0.5"
  }
}
