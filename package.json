    "@commitlint/prompt": "^19.3.1",
    "@ducktors/tsconfig": "^1.0.0",
    "@types/node": "^20.8.2",
    "c8": "^8.0.1",
    "commitlint-plugin-function-rules": "^4.0.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "tsx": "^3.13.0",
